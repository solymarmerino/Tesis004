
@{
	ViewBag.Title = "GestionInventario";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Link para uso de iconos-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<h2>Gestion Inventario</h2>

<div class="row">
	<div class="col-md-6">
		<br />
		<label>Producto</label>
		<br />
		<input id="iptProducto" name="iptProducto" class="col-md" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		<label id="ValidacionProducto" name="ValidacionProducto"> </label>
	</div>
	<div class="col-md-3">
		<br />
		<label>Tipo</label>
		<br />
		<input id="iptTipoProducto" name="iptTipoProducto" class="col-md" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
		<label id="ValidacionTipoProducto" name="ValidacionTipoProducto"> </label>
	</div>
	<div class="col-md-3">
		<br />
		<label>Cantidad</label>
		<br />
		<input id="iptCantidad" name="iptCantidad" class="col-md" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		<label id="ValidacionCantidad" name="ValidacionCantidad"> </label>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<br />
		<label>Lote</label>
		<br />
		<input id="iptLote" name="iptLote" class="col-md" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		<label id="ValidacionLote" name="ValidacionLote"> </label>
	</div>
	<div class="col-md-3">
		<br />
		<label>Fecha Vencimiento</label>
		<br />
		<input id="iptFechaVencimiento" name="iptFechaVencimiento" class="col-md" type="date" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		<label id="ValidacionFechaVencimiento" name="ValidacionFechaVencimiento"> </label>
	</div>
</div>


<div class="text-center">
	<button id="btnGuardarProducto" name="btnGuardarProducto" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" >GUARDAR</button>
	<!--<button id="btnBuscarProducto" name="btnBuscarProducto" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" >BUSCAR</button>-->
</div>
<br />
<div>
	<table id="tblProducto" class="table">
	</table>
</div>

<script src="~/Scripts/inventario.js"></script>
<script src="~/Scripts/Validador.js"></script>