
@{
    ViewBag.Title = "GestionEnfermeria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enfermeria</h2>

<div class="container">
	<br>
	<!-- Nav tabs  creacion de encavezado de navegacion-->
	<ul class="nav nav-tabs" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" data-toggle="tab" href="#signosvitales">Signos Vitales</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#vacunas">Vacunas</a>
		</li>
	</ul>
	<div class="tab-content">
		<div id="signosvitales" class="container tab-pane active">
			<br />
			<div class="card bg-info text-white">
				<div class="card-header">
					SIGNOS VITALES
				</div>
			</div>
			<br />

			<div class="text-right">
				<p><label>Nº Historia Clinica</label></p>
				<input style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" disabled />
			</div>
			<br />
			<div class="row">
				<div class="col-xl-6">
					<p>
						<label>Nombre Completo</label>
						<br />
						<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled />
					</p>
				</div>
				<div class="col-md-3">
					<p>
						<label>Cedula</label>
						<br />
						<input style="text-align:left; border-radius:0.3rem; width:250px; height:40px;" disabled />
					</p>
				</div>
				<div class="col-md-3">
					<p>
						<label>Fecha de Nacimiento</label>
						<br />
						<input type="date" style="text-align:left; border-radius:0.3rem; width:250px; height:40px;" disabled />
					</p>
				</div>
			</div>
			
			<br />
			<div class="row">
				<input name="IdHistoriaClinica" hidden />
				<div class="col-md-2">
					<p>
						<label>Temperatura</label>
						<input name="Temperatura" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>Preción Arterial</label>
						<input name="PrecionArterial" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>FR</label>
						<input name="Fr" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>FC</label>
						<input name="Fc" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>Peso</label>
						<input name="Peso" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>Talla</label>
						<input name="Talla" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
				<div class="col-md-2">
					<p>
						<label>Saturación</label>
						<input name="Talla" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
					</p>
				</div>
			</div>
			<br />
			<div class="text-center">
				<button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit" onclick="validarFormularioSimple()">GUARDAR</button>
			</div>
		</div>
	</div>
</div>