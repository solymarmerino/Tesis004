
@{
	ViewBag.Title = "IngresoFactura";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<h2>Factura</h2>

<!--Encabezado de factura-->
<div class="row">
	<div class="col-xl-3">
		<p>
			<label>Fecha</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled />
		</p>
	</div>
	<div class="col-xl-12">
		<p>
			<label>Cliente</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;"/>
		</p>
	</div>
	<div class="col-xl-12">
		<p>
			<label>Dirección</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;"/>
		</p>
	</div>
	<div class="col-xl-6">
		<p>
			<label>RUC/C.I.</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;"/>
		</p>
	</div>
	<div class="col-xl-6">
		<p>
			<label>Telefono</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;"/>
		</p>
	</div>
</div>

<!--Ingresar detalle-->
<div class="row">
	<div class="col-xl-11">
		<p>
			<label>Detalle</label>
			<br />
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-1">
		<p>
			<label>   </label>
			<br />
			<button title="agregar" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.4rem; width:40px; height:40px; cursor: pointer" type="submit">
				<i class="fa fa-plus-square"></i>
			</button>
		</p>
		
	</div>

</div>

<!--Detalles de factura-->
<div class="container">
	<div>
		<table id="TablaDetalleFactura" class="table">
			<tr>
				<th scope="col">Cantidad</th>
				<th scope="col">Detalle</th>
				<th scope="col">Valor Unitario</th>
				<th scope="col">Valor Total</th>
				<th scope="col"></th>
			</tr>

			<tr>
				<td scope="col"></td>
				<td scope="col"></td>
				<td scope="col"></td>
				<td scope="col"></td>
				<td scope="col">
					<form action="Modificar" method="post">
						<button name="IdPersonal" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">
							<i class="fas fa-trash-alt"></i>
						</button>
					</form>
				</td>
			</tr>

		</table>
	</div>
</div>

<div class="row">
	<div claas="col-xl-3">
		<p>
			<label>Total </label>
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<input class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled />
		</p>
	</div>
</div>

<div class="text-center">
	<br />
	<button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit" onclick="guardarPaciente()">IMPRIMIR</button>
</div>