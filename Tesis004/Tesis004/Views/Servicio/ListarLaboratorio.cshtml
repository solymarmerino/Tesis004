
@{
	ViewBag.Title = "ListarLaboratorio";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<h2 class="text-center">Lista de Examenes Medicos</h2>
<br />
<div class="row">
	<div class="col-xl-2">
		<p>
			<input name="tipoParametro" type="radio" value="Nombre" /> Nombre
		</p>
	</div>
	<div class="col-xl-2">
		<p>
			<input name="tipoParametro" type="radio" value="Cedula" /> Cedula
		</p>
	</div>
	<div class="col-xl-2">
		<p>
			<input name="tipoParametro" type="radio" value="HCPaciente" /> Nº Historia Clinica
		</p>
	</div>
</div>

<div class="row">
	<div class="col-xl-6">
		<p>
			<input name="parametroBusqueda" class="col-xl" style=" text-transform: uppercase;text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer">BUSCAR</button>
	</div>
</div>
<br />
<div class="table-responsive">
	<table class="table">
		<tr>
			<th scope="col">Paciente</th>
			<th scope="col">Historia Cl&iacute;nica</th>
			<th scope="col">C&eacute;dula</th>
			<th scope="col">Codigo</th>
			<th scope="col">Pagado</th>
			<th scope="col">Facturado</th>
			<th scope="col">Hecho</th>
			<th scope="col"></th>
			<th scope="col"></th>
			<th scope="col"></th>
		</tr>
		<tr>
			<td scope="col">JUAN DAVID MOLINA PEREZ</td>
			<td scope="col">00001</td>
			<td scope="col">1234567890</td>
			<td scope="col">99999</td>
			<td scope="col">SI</td>
			<td scope="col">SI</td>
			<td scope="col">SI</td>
			<td scope="col">
				<button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">
					<i class="fas fa-eye"></i>
				</button>
			</td>
			<td scope="col">
				<form action="#" method="post">
					<input name="Pagado" value="SI" hidden />
					<button name="IdCita" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">
						<i class="far fa-money-bill-alt"></i>
					</button>
				</form>
			</td>
			<td scope="col">
				<button name="IdCita" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">
					<i class="fas fa-trash-alt"></i>
				</button>
			</td>
		</tr>
	</table>
</div>
<br />
<div class="text-center">
	<button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:180px; height:40px; cursor: pointer" onclick="location='../Laboratorio/Ingresar'">NUEVA</button>
</div>
